<!-- res/drawable/light_box_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="#D3D3D3"/> <!-- Border color and width -->
    <corners android:radius="4dp"/> <!-- Corner radius for rounded corners -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Padding inside the box -->
</shape>
